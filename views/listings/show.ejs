<% layout("/layout/boilerplate")%>
    <div class="row">
        <div class="col-8 offset-2 ">
          <h1> <%= listing.title %></h1>
          
        </div>
        <br></br>
        <div class="card col-8 offset-2  show-card listing-card">
            <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="...">
            <div class="card-body">
                <h5 class="card-title">
                    
                    
                </h5>
                <p class="card-text">
                    <%= listing.description %>
                </p>
                <p class="card-text">
                    <% if (listing.price !=null) { %>
                        â‚¹ <%= listing.price.toLocaleString("en-IN") %>
                            <% } else { %>
                                <span class="text-muted">Price not available</span>
                                <% } %>

                </p>
                <p class="card-text">
                    <%= listing.location %>
                </p>
                <p class="card-text">
                    <%= listing.country %>
                </p>
            </div>
        </div>


        <div class="btns">
            <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark col-1 offset-2">Edit </a>

            <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
                <button class="btn btn-dark offset-4">Delete</button>
            </form>
        </div>
        <div class="col-8 offset-2 ">
            <hr>
            <h4>Leave a Review</h4>
            <form action="/listings/<%= listing.id %>/reviews" method="POST" novalidate class="needs-validation">
                <div class="mt-3">
                    <label for="rating"  class="form-label">Rating</label>
                    <input type="range" class="form-range" min="1" max="5" id="rating" name="review[rating]" class="form-control">

                </div>
                <div class="mt-3">
                    <label for="comment"  class="form-label">Comments</label>
                    <textarea name="review[comment]" id="" cols="30" rows="5"class="form-control" required></textarea>
                    <div class="invalid-feedback">Please enter the valueble feedback</div>
                </div>
                <button  class="btn btn-dark mb-3 mt-3">Submit</button>
            </form>
            <hr/>
            <h4>All Reviews</h4>
            <div class="row">
           <% for(review of listing.reviews){ %>
            <div class="card col-5 ms-3 mb-3">
                <div class="card-body">
                    <h5 class="card-title">jane doe</h5>
                    <p class="card-text"> <%= review.comment %> </p>
                    <p class="card-text"><%= review.rating %> <i class="fa-solid fa-star"></i></p>
                    <form method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                   
                     <button  type="submit" class="delete-btn">
                        <i class="fa-solid fa-trash"></i>
                     </button>
                    </form>
                </div>
            </div>
            <% } %>
            </div>
        </div >

    </div>
   